<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LecturerViewExamController</servlet-name>
        <servlet-class>controller.exam.LecturerViewExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeExamController</servlet-name>
        <servlet-class>controller.exam.TakeExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaseRequiredLecturerAuthenticationController</servlet-name>
        <servlet-class>controller.auth.BaseRequiredLecturerAuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentViewExamController</servlet-name>
        <servlet-class>StudentViewExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaseRequiredStudentAuthenticationController</servlet-name>
        <servlet-class>cotroller.auth.student.BaseRequiredStudentAuthenticationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerViewExamController</servlet-name>
        <url-pattern>/exam/lecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeExamController</servlet-name>
        <url-pattern>/exam/take</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseRequiredLecturerAuthenticationController</servlet-name>
        <url-pattern>/BaseRequiredLecturerAuthenticationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentViewExamController</servlet-name>
        <url-pattern>/exam/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseRequiredStudentAuthenticationController</servlet-name>
        <url-pattern>/BaseRequiredStudentAuthenticationController</url-pattern>
    </servlet-mapping>
</web-app>
